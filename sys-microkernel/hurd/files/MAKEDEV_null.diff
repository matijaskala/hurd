+st_mknod() {
+  local NODE="$1"
+  local OWNER="$2"
+  local PERM="$3"
+  local N1="$4"
+  local N2="$5"
+  shift 5
+  if [ "$KEEP" ] && showtrans "$NODE" > /dev/null 2>&1 ; then
+    return;
+  fi
+  rm -f "$NODE"
+  if cmd mknod "$NODE" c "$N1" "$N2"; then
+    cmd chown "$OWNER" "$NODE"
+    cmd chmod "$PERM" "$NODE"
+    cmd settrans $STFLAGS "$NODE" "$@"
+  fi
+}
